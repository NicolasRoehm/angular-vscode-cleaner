{
  "name": "angular-vscode-cleaner",
  "displayName": "Angular VSCode Cleaner",
  "description": "Extension that reorder and classify Angular imports",
  "version": "0.0.1",
  "publisher": "NicolasRoehm",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://https://github.com/NicolasRoehm/angular-vscode-cleaner.git"
  },
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:angularVSCCleaner.importCleaner",
    "onCommand:angularVSCCleaner.constructorCleaner",
    "onCommand:angularVSCCleaner.componentCleaner"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "angular-vscode-cleaner",
      "properties": {
        "angularVSCCleaner.import.config": {
          "description": "Clean import configuration",
          "scope": "window",
          "type": "array",
          "items": {
            "type": "object",
            "title": "Categories by 'from' content",
            "properties": {
              "category": {
                "type": "string",
                "description": "Category"
              },
              "fromContent": {
                "type": "string",
                "description": "'from' content separated by comma"
              }
            }
          },
          "default": [
            {
              "category": "Angular modules",
              "fromContent": "@angular"
            },
            {
              "category": "Ionic modules",
              "fromContent": "ionic"
            },
            {
              "category": "Internal modules",
              "fromContent": ".module, .manager, environment"
            },
            {
              "category": "Interfaces",
              "fromContent": ".interface"
            },
            {
              "category": "Directives",
              "fromContent": ".directive"
            },
            {
              "category": "Factories",
              "fromContent": ".factory"
            },
            {
              "category": "Validators",
              "fromContent": ".validator"
            },
            {
              "category": "Guards",
              "fromContent": ".guard"
            },
            {
              "category": "Helpers",
              "fromContent": ".helper"
            },
            {
              "category": "Enums",
              "fromContent": ".enum"
            },
            {
              "category": "Models",
              "fromContent": ".model"
            },
            {
              "category": "Services",
              "fromContent": ".service"
            },
            {
              "category": "Components",
              "fromContent": ".component"
            }
          ]
        }
      }
    },
    "commands": [
      {
        "command": "angularVSCCleaner.importCleaner",
        "title": "Clean imports"
      },
      {
        "command": "angularVSCCleaner.constructorCleaner",
        "title": "Clean constructor"
      },
      {
        "command": "angularVSCCleaner.componentCleaner",
        "title": "Clean component"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "typescript": "^4.6.3"
  }
}
