{
  "name": "angular-vscode-cleaner",
  "displayName": "Angular VSCode Cleaner",
  "description": "Extension that reorder and classify Angular imports",
  "version": "0.0.1",
  "publisher": "NicolasRoehm",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://https://github.com/NicolasRoehm/angular-vscode-cleaner.git"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:angular-vscode-extension.importCleaner",
    "onCommand:angular-vscode-extension.constructorCleaner",
    "onCommand:angular-vscode-extension.componentCleaner"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "angular-vscode-cleaner",
      "properties": {
        "angular-vscode-extension.import.categories": {
          "description": "Clean import categories",
          "scope": "window",
          "type": "array",
          "items": {
            "type": "object",
            "title": "Categories by 'from' content",
            "properties": {
              "category": {
                "type": "string",
                "description": "Category"
              },
              "fromContent": {
                "type": "string",
                "description": "'from' content separated by comma"
              }
            }
          },
          "default": [
            {
              "category": "Angular modules",
              "fromContent": "@angular"
            },
            {
              "category": "Ionic modules",
              "fromContent": "ionic"
            },
            {
              "category": "Internal modules",
              "fromContent": ".module, .manager, environment"
            },
            {
              "category": "Interfaces",
              "fromContent": ".interface"
            },
            {
              "category": "Directives",
              "fromContent": ".directive"
            },
            {
              "category": "Factories",
              "fromContent": ".factory"
            },
            {
              "category": "Validators",
              "fromContent": ".validator"
            },
            {
              "category": "Guards",
              "fromContent": ".guard"
            },
            {
              "category": "Helpers",
              "fromContent": ".helper"
            },
            {
              "category": "Enums",
              "fromContent": ".enum"
            },
            {
              "category": "Models",
              "fromContent": ".model"
            },
            {
              "category": "Services",
              "fromContent": ".service"
            },
            {
              "category": "Components",
              "fromContent": ".component"
            }
          ]
        }
      }
    },
    "commands": [
      {
        "command": "angular-vscode-extension.importCleaner",
        "title": "Clean imports"
      },
      {
        "command": "angular-vscode-extension.constructorCleaner",
        "title": "Clean constructor"
      },
      {
        "command": "angular-vscode-extension.componentCleaner",
        "title": "Clean component"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.66.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5",
    "@vscode/test-electron": "^2.1.3"
  }
}
